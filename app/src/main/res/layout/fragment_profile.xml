<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/white_toolbar"
        layout="@layout/layout_toolbar_white_bg" />

    <View
        android:id="@+id/top_view"
        android:layout_below="@id/white_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f3f3f3" />


    <LinearLayout
        android:layout_below="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin_15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_margin_15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_Userprofile"
                android:layout_width="@dimen/activity_margin_80dp"
                android:layout_height="@dimen/activity_margin_80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user_image"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/bordercolor"
                app:civ_border_color="@color/bordercolor"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_15dp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_margin_5dp">

                    <TextView
                        android:id="@+id/farmer_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/namaskar_guest"
                        android:fontFamily="@font/robo_bold"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_size_16sp"/>



                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_change_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="@dimen/activity_margin_2dp"
                    app:cardCornerRadius="@dimen/activity_margin_20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_margin_15dp"
                        android:paddingRight="@dimen/activity_margin_15dp"
                        android:paddingTop="@dimen/activity_margin_10dp"
                        android:paddingBottom="@dimen/activity_margin_10dp">


                        <ImageView
                            android:layout_width="@dimen/activity_margin_20dp"
                            android:layout_height="@dimen/activity_margin_20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/activity_margin_5dp"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/color_green"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/robo_regular"
                            android:layout_marginLeft="10dp"
                            android:text="@string/change_profile_photo"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_14sp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f3f3f3"
            android:layout_marginBottom="@dimen/margin_15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dob" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_margin_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/robo_regular"
                        android:text="@string/dob"
                        android:textColor="@color/color_7E919B"
                        android:textSize="@dimen/text_size_14sp" />


                    <TextView
                        android:id="@+id/eduction_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/robo_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="@dimen/activity_margin_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_5dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:background="@color/color_f3f3f3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_marital_status" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_margin_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/robo_regular"
                        android:text="@string/birth_time"
                        android:textColor="@color/color_7E919B"
                        android:textSize="@dimen/text_size_14sp" />


                    <TextView
                        android:id="@+id/marital_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/robo_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:background="@color/color_f3f3f3" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_5dp"
                    android:fontFamily="@font/robo_regular"
                    android:text="@string/birth_place"
                    android:textColor="@color/color_7E919B"
                    android:textSize="@dimen/text_size_14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/robo_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />


                    <TextView
                        android:id="@+id/birth_place_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robo_regular"
                        android:gravity="center"
                        android:paddingLeft="@dimen/activity_margin_10dp"
                        android:paddingTop="@dimen/activity_margin_5dp"
                        android:paddingRight="@dimen/activity_margin_10dp"
                        android:paddingBottom="@dimen/activity_margin_5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:background="@color/color_f3f3f3" />


        <!--
           *************************
           -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_religion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_margin_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/robo_regular"
                        android:text="@string/religion"
                        android:textColor="@color/color_7E919B"
                        android:textSize="@dimen/text_size_14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/religion_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/robo_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="@dimen/activity_margin_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_margin_5dp"
                android:layout_marginRight="@dimen/activity_margin_5dp"
                android:background="@color/color_f3f3f3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_caste" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_margin_15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/robo_regular"
                        android:text="@string/caste"
                        android:textColor="@color/color_7E919B"
                        android:textSize="@dimen/text_size_14sp" />


                    <TextView
                        android:id="@+id/caste_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/robo_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:background="@color/color_f3f3f3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_margin_15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mobile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_5dp"
                    android:fontFamily="@font/robo_regular"
                    android:text="@string/mobile_number"
                    android:textColor="@color/color_7E919B"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:id="@+id/mobile_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/robo_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:background="@color/color_f3f3f3" />


        <!--
          *************************
          -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail_id" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_margin_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_5dp"
                    android:fontFamily="@font/robo_regular"
                    android:text="@string/email_id"
                    android:textColor="@color/color_7E919B"
                    android:textSize="@dimen/text_size_14sp" />


                <TextView
                    android:id="@+id/email_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/robo_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:background="@color/color_f3f3f3" />



        <androidx.cardview.widget.CardView
            android:id="@+id/card_edit_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_15dp"
            android:layout_marginLeft="@dimen/activity_margin_15dp"
            android:layout_marginRight="@dimen/activity_margin_30dp"
            app:cardCornerRadius="@dimen/activity_margin_20dp"
            app:cardElevation="@dimen/activity_margin_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_margin_15dp"
                android:paddingTop="@dimen/activity_margin_10dp"
                android:paddingRight="@dimen/activity_margin_15dp"
                android:paddingBottom="@dimen/activity_margin_10dp">


                <ImageView
                    android:layout_width="@dimen/activity_margin_20dp"
                    android:layout_height="@dimen/activity_margin_20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_margin_5dp"
                    android:src="@drawable/ic_edit" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robo_regular"
                    android:text="@string/edit_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>